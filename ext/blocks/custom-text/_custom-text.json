{
  "definitions": [
    {
      "title": "Custom Text",
      "id": "custom-text",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block",
            "template": {
              "name": "Custom Text",
              "model": "custom-text",
              "heading": "My Heading",
              "body": "<p>Enter some body text here...</p>"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "custom-text",
      "fields": [
        {
          "component": "text",
          "name": "heading",
          "label": "Heading",
          "valueType": "string",
          "config": {
            "placeholder": "Enter heading..."
          }
        },
        {
          "component": "richtext",
          "name": "body",
          "label": "Body",
          "valueType": "string",
          "config": {
            "multiline": true,
            "allowedFormats": ["bold", "italic", "link", "list"]
          }
        }
      ]
    }
  ],
  "filters": []
}

