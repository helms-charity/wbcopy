    },
    {
      "title": "Tab",
      "id": "tab",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/block/v1/block/item",
            "template": {
              "name": "Tab",
              "model": "tab",
              "title": "Tab"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "tab",
      "fields": [
        {
          "component": "text",
          "valueType": "string",
          "name": "title",
          "value": "",
          "label": "Tab Name",
          "required": true
        },
        {
          "component": "select",
          "valueType": "string",
          "name": "tab-type",
          "label": "Type of Tab",
          "description": "Select the Type of Tab",
          "value": "",
          "required": true,
          "options": [
            {
              "name": "All Tab",
              "value": "all"
            },
            {
              "name": "Publication",
              "value": "publication"
            },
            {
              "name": "Project",
              "value": "project"
            },
            {
              "name": "Blogs",
              "value": "blogs"
            },
            {
            "name": "News",
            "value": "news"
            },
            {
              "name": "Events",
              "value": "events"
            },
            {
              "name": "Author Manually",
              "value": "manual"
            }
          ]
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "url",
          "value": "",
          "label": "URL",
          "condition": {
            "!=": [{ "var": "tab-type" }, "manual"]
          }
        }, 
        {
          "component": "boolean",
          "label": "POST",
          "name": "post",
          "value": "false",
          "valueType": "boolean",
          "condition": {
          "or": [
            {
              "==": [
                {
                  "var": "tab-type"
                },
                "blogs"
              ]
            },
            {
              "==": [
                {
                  "var": "tab-type"
                },
                "events"
              ]
            }
          ]
        }
        }, 
        {
          "component": "text",
          "valueType": "string",
          "name": "body",
          "value": "",
          "label": "Body",
          "condition": {
            "===": [
              {
                "var": "post"
              },
              true
            ]
          }
          },
          {
          "component": "aem-content",
          "valueType": "string",
          "name": "fragmentPath",
          "value": "",
          "label": "Fragment Path",
          "condition": {
            "==": [
              {
                "var": "tab-type"
              },
              "manual"
            ]
          }
        },
        {
          "component": "select",
          "name": "tab-variant",
          "label": "Tab Variant",
          "valueType": "string",
          "value": "",
          "options": [
            {
              "name": "Default View",
              "value": ""
            },
            {
              "name": "2 Column View",
              "value": "two-column-view"
            }
          ]
        },
        {
          "component": "text",
          "valueType": "string",
          "name": "display-items",
          "value": "",
          "label": "Display Items",
          "description": "Number of items to display in this tab"
        },
        {
          "component": "boolean",
          "label": "Disable Load More",
          "description": "Disable Load More button for this tab",
          "name": "disable-load-more",
          "value": "false",
          "valueType": "boolean"
        },
        {
          "component": "text",
          "name": "see-all-button-label",
          "value": "",
          "label": "See All Button Label",
          "valueType": "string",
          "condition": {
            "==": [
              {
                "var": "disable-load-more"
              },
              true
            ]
          }
        },
        {
          "component": "text",
          "name": "see-all-button-link",
          "value": "",
          "label": "See All Button Link",
          "valueType": "string",
          "condition": {
            "==": [
              {
                "var": "disable-load-more"
              },
              true
            ]
          }
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "tabs",
      "components": [
        "tab"
      ]
    }
  ]
}
